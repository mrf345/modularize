{
  "name": "@mrf3/modularize",
  "version": "0.0.4",
  "description": "module to parse and include html templates",
  "main": "lib/index.js",
  "scripts": {
    "test": "standard ./src && jest ./src",
    "build": "webpack",
    "format": "standard --fix ./src",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "push": "babel --config-file ./babel.config.js --plugins=@babel/plugin-proposal-class-properties src/ --out-dir lib/ && npm login && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrf345/modularize.git"
  },
  "keywords": [
    "templates",
    "modules",
    "html",
    "parse"
  ],
  "author": "Mohamed Feddad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrf345/modularize/issues"
  },
  "homepage": "https://github.com/mrf345/modularize#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@types/jest": "^24.0.23",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-minify": "^0.5.1",
    "babel-minify-webpack-plugin": "^0.3.1",
    "coveralls": "^3.0.9",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "standard": "14.3.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@babel/polyfill": "^7.7.0",
    "node-fetch": "^2.6.0",
    "jsdom": "^15.2.1"
  },
  "standard": {
    "globals": [
      "beforeEach",
      "afterEach",
      "it",
      "test",
      "assert",
      "window",
      "fetch",
      "document",
      "expect",
      "describe",
      "jest"
    ]
  },
  "browser": {
    "jsdom": false,
    "https": false,
    "fs": false
  }
}
